<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:HMS.ViewModel" x:Class="HMS.Login"
        Title="Hospital Management System" Height="200" Width="400" Background="White" Loaded="Window_Loaded">
    <Grid>
       
        <Canvas Name="CanvasLogin" Width="200" Height="100" >
            
            <Label x:Name="labelUserID" HorizontalAlignment="Left" Height="25" Width="50" Canvas.Left="5" Canvas.Top="0" Content="UserID"/>
            <TextBox x:Name="txtbox_UserName" HorizontalAlignment="Left" Height="25"  Width="100" Canvas.Left="100" Canvas.Top="0" Text="{Binding LoginData.UserID}" />
            <Label x:Name="labelPwd" HorizontalAlignment="Left" Height="25" Width="60" Canvas.Left="5" Canvas.Top="30" Content="Password"/>
            <TextBox x:Name="pwd" HorizontalAlignment="Left" Height="25" Width="100" Canvas.Left="100" Canvas.Top="30" Text="{Binding LoginData.Password}" />
            <Button x:Name="buttonLogin" HorizontalAlignment="Left" Height="25" Width="75" Canvas.Left="50" Canvas.Top="75" Content="Login" Click="buttonLogin_Click"/>
        </Canvas>


    </Grid>
</Window>
