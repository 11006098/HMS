<Window x:Class="HMS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Management System" Height="200" Width="400" Background="White">
    <Grid>
        <Canvas Width="200" Height="100">
            <Label Name="labelUserID" HorizontalAlignment="Left" Height="25" Width="50" Canvas.Left="5" Canvas.Top="0" Content="UserID"></Label>
            <TextBox Name="txtbox_UserName" HorizontalAlignment="Left" Height="25"  Width="100" Canvas.Left="100" Canvas.Top="0"/>
            <Label Name="labelPwd" HorizontalAlignment="Left" Height="25" Width="60" Canvas.Left="5" Canvas.Top="30" Content="Password"></Label>
            <PasswordBox Name="pwd" HorizontalAlignment="Left" Height="25" Width="100" Canvas.Left="100" Canvas.Top="30"></PasswordBox>
            <Button Name="buttonLogin" HorizontalAlignment="Left" Height="25" Width="75" Canvas.Left="50" Canvas.Top="75" Content="Login" Click="buttonLogin_Click"></Button>
        </Canvas>
        

    </Grid>
</Window>
