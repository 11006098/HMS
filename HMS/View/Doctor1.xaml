<Window x:Class="HMS.View.Doctor1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor1" Height="300" Width="600">
    <Canvas Background="White">
        <Label  Height="25" Width="200" Canvas.Left="0" Canvas.Top="10" Content="Welcome Doctor : DoctorName"></Label>
        <Label Content="Doctor ID" Height="25" Width="100" Canvas.Left="100" Canvas.Top="40"></Label>

        <Canvas Height="150" Width="560" Canvas.Top="100" Canvas.Left="10">
            <ListView Height="150" Width="570">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Pateient Name" Width="190"></GridViewColumn>
                        <GridViewColumn Header="Appointment Date" Width="190"></GridViewColumn>
                        <GridViewColumn Header="Details" Width="190"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Canvas>
    </Canvas>
</Window>
